BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_number
            text: ''
            multiline: False
            input_filter: 'float'

        Button:
            text: 'Square'
            on_press: app.handle_square()

        Label:
            id: output_label
            text: ''
            color: 1, 0.4, 0.7, 1  # Pink RGBA

    Label:
        text: 'Enter a number and press "Square"'
        size_hint_y: 0.3
